<%= render partial: 'shared/merchant_links', locals: {path: "/merchant/#{@merchant.id}"} %>

<%= form_with url: merchant_bulk_discounts_path(@merchant), method: :post, local: true do |f| %>
  <%= f.label :percent_off %>
  <%= f.number_field :percent_off, min: 0, step: 5, max: 50, required: true %><br/><br/>
  <%= f.label :thresholds %>
  <%= f.number_field :thresholds, min: 5, required: true %><br/><br/>
  <%= f.label :status %>
  <%= f.select :status, options_for_select(['disabled', 'enabled']), :selected => params[:status] %><br/><br/>
  <%= f.submit 'Add' %>
<% end %>
