<%= render partial: 'shared/merchant_links', locals: {path: "/merchant/#{@merchant.id}"} %>

<body>
  <div class="row">
    <h2 class='col-12'>Invoice #<%= @invoice.id %></h2>
  </div>

  <div id="current-invoice-status">
    <strong>Status: </strong><%= @invoice.status %>
  </div>
  <br>

  <p> Created on: <%= @invoice.created_at.strftime("%A, %B %-d, %Y") %></p>
  <p>Total Revenue: <%= number_to_currency(@invoice.total_revenue) %></p>
  <p>Total Discounted Revenue: <%= number_to_currency(@invoice.discounted_revenue) %></p>

  <h4>Customer:</h4>
    <%= @customer.first_name %> <%= @customer.last_name %><br>
  <br>
  <br>
  <h4>Items on this Invoice:</h4>
  <table class="table">
    <thead>
      <tr class="tr">
        <th class="th1">Item Name</th>
        <th class="th1">Quantity</th>
        <th class="th1">Unit Price</th>
        <th class="th1">Discount Applied</th>
        <th class="th1">Status</th>
      </tr>
    </thead>

    <tbody>
      <% @invoice.invoice_items.each do |i| %>
        <section id="the-status-<%= i.id %>">
          <tr class="tr">
            <td style="text-align:center"><%= i.item.name %></td>
            <td style="text-align:center"><%= i.quantity %></td>
            <td style="text-align:center"><%= number_to_currency(i.unit_price) %></td>
            <td style="text-align:center">
              <% if i.eligible %><%= link_to "#{i.eligible.percent_off}% Discount", "/merchant/#{i.merchant.id}/bulk_discounts/#{i.eligible.id}" %>
            <% end %>
            </td>
            <td style="text-align:center"><%= form_with model: @invoice, url: merchant_invoice_path(@merchant, @invoice), method: :patch, local: true do |f| %>
                                            <%= f.select :status, Invoice.statuses.keys, selected: "#{@invoice.status}" %>
                                            <%= f.submit 'Update Invoice' %>
                                          <% end %></td><br/>
          </tr>
        </section>
      <% end %>
    </tbody>
  </table>

</body>
