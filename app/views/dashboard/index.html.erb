<%= render partial: 'shared/merchant_links', locals: {path: "/merchant/#{@merchant.id}"} %>

<body>

  <h2 class='mr-auto col-sm-5'>Favorite Customers</h2>
  <ul class='mr-auto col-sm-4'>
    <% @merchant.favorite_customers.each do |customer| %>
      <section id="customer-<%= customer.id %>">
          <li><%= customer.first_name %> <%= customer.last_name %>
          - <%= customer.top_result %> Purchases</li>
      </section>
    <% end %>
  </ul>

  <h2 class='ml-auto col-sm-5'>Items Ready to Ship</h2>
  <ul class='ml-auto col-sm-4'>
    <section id = "items_ready_to_ship" >
      <p><% @merchant.ordered_items_to_ship.each do |item| %>
            <li><%= item.name %> - Invoice #<%= link_to "#{item.invoice_ids}", "/merchant/#{@merchant.id}/invoices/#{item.invoice_ids[0]}" %>
            <%= item.created_at.strftime("%A, %B %-d, %Y") %></li>
        <% end %>
      </p>
    </section>
  </ul>
</body>
